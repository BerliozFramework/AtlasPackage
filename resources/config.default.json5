{
  "commands": {
    "atlas:skeleton": "\\Berlioz\\Package\\Atlas\\Command\\SkeletonCommand"
  },
  "atlas": {
    "pdo": {
      "connection_locator": {
        "default": {
          "dsn": null,
          "username": null,
          "password": null
        },
        "read": {},
        "write": {}
      }
    },
    "namespace": null,
    "directory": "./src/DataSource",
    "orm": {
      "atlas": {
        "transaction_class": "Atlas\\Orm\\Transaction\\AutoTransact",
        "log_queries": "{config: berlioz.debug.enable}"
      }
    },
    "cli": {
      "config": {
        "input": {
          "pdo": {
            "dsn": "{config: atlas.pdo.connection_locator.default.dsn}",
            "username": "{config: atlas.pdo.connection_locator.default.username}",
            "password": "{config: atlas.pdo.connection_locator.default.password}"
          },
          "directory": "./src/DataSource",
          "namespace": "App\\DataSource"
        }
      }
    },
    "transform": {
      "types": {
        //// add `table_name: Type` overrides here
        // "foos": "Foo",
        // "bars": "Bar",
        // "bazzes": "Baz"
      }
    }
  },
  "twig": {
    "paths": {
      "Berlioz-AtlasPackage": "{config: berlioz.directories.vendor}/berlioz/atlas-package/resources"
    }
  }
}